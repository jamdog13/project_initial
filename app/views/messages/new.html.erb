<% provide(:title, 'Send Message') %>
Send message to <%=User.find(params[:send][:id]).name%>
<%= form_for(:message, url: messages_path) do |f| %>
		<%= f.label :title, "Title"%>
      <%= f.text_field :title %>

      <%= f.label :content %>
      <%= f.text_area :content %>

      <%= f.hidden_field :recipient, :value =>params[:send][:id]%>


<%= f.submit "Send message", class: "btn btn-large" %>
<% end %>